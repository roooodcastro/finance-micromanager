<h1>
  <%= [t('.hello'), @invitee&.display_name.presence].compact.join(' ') %>,
</h1>

<p>
  <%= t('.invite_paragraph', inviter: @inviter.display_name, wallet_name: @wallet_share_invite.wallet.display_name) %>
</p>

<p>
  <%= link_to t('.view_invite_link'), wallets_url %>
  <br />
  <%= wallets_url %>
</p>

<% unless @invitee %>
  <p>
    <strong>
      <%= t('.new_wallet_paragraph')%>
    </strong>
  </p>

  <p>
    <%= link_to t('.sign_up_link'), sign_up_url %>
    <br />
    <%= sign_up_url %>
  </p>
<% end %>
