{
  "id": "<%= Rails.env.development? ? '/?dev=1' : '/' %>",
  "short_name": "<%= Rails.env.development? ? 'FMMDev' : 'FMM' %>",
  "name": "<%= Rails.env.development? ? 'Finance MicroManager - Dev' : I18n.t('views.app_name') %>",
  "description": "<%= I18n.t('views.app_description') %>",
  "icons": [
    {
      "src": "<%= vite_asset_path('images/favicon/favicon-192.png') %>",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "<%= vite_asset_path('images/favicon/favicon-512.png') %>",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "<%= vite_asset_path('images/maskable-monogram.png') %>",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "<%= I18n.t('views.transactions.pwa_shortcut_label') %>",
      "url": "/?new_transaction=true"
    }
  ],
  "screenshots": [
    {
      "src": "<%= vite_asset_path('images/screenshots/login_page_portrait.png') %>",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "<%= I18n.t('views.manifest.screenshots.login_page') %>"
    },
    {
      "src": "<%= vite_asset_path('images/screenshots/login_page_landscape.png') %>",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "<%= I18n.t('views.manifest.screenshots.login_page') %>"
    },
    {
      "src": "<%= vite_asset_path('images/screenshots/dashboard_landscape.png') %>",
      "sizes": "1440x900",
      "type": "image/png",
      "form_factor": "wide",
      "label": "<%= I18n.t('views.manifest.screenshots.dashboard') %>"
    },
    {
      "src": "<%= vite_asset_path('images/screenshots/dashboard_portrait.png') %>",
      "sizes": "645x1398",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "<%= I18n.t('views.manifest.screenshots.dashboard') %>"
    }
  ],
  "start_url": "/",
  "background_color": "#EEEEFF",
  "display": "standalone",
  "scope": "/",
  "theme_color": "#1A5E33"
}
